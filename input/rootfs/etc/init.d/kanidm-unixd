#!/sbin/openrc-run

name=kanidm-unixd
command="/usr/bin/kanidm_unixd"
command_user="kanidm-unixd:kanidm-unixd"
command_background=true
pidfile="/run/$RC_SVCNAME.pid"

depend() {
    need net
    after firewall
}

start_pre() {
    mkdir -p /data/var/cache/kanidm-unixd /data/var/lib/kanidm-unixd /var/run/kanidm-unixd
}
