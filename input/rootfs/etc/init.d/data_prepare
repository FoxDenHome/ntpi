#!/sbin/openrc-run
# shellcheck shell=ash

depend()
{
    need localmount
}

start()
{
    ebegin Preparing persistent data
    /sbin/ab_resizedata
    # make sure /data is mounted
    mount -a

    mkdir -p /data/chrony && chown -R chrony:chrony /data/chrony
    mkdir -p /tmp/node-exporter

    eend 0
}
